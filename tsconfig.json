{
	"compilerOptions": {
		"lib": ["es2023", "DOM"],
		"target": "es2022",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"noImplicitAny": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
