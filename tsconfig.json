{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",

		"strict": true,
		"noUncheckedIndexedAccess": true,

		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,

		"noImplicitAny": false,
		"lib": ["es2023", "DOM"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
